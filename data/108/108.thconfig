source OmbligoDeLaMadre/OmbligoDeLaMadre.th

input ../../layouts/metapost/scalebar_arrow.thl
layout local
  copy custom_scalebar
  scale 1 500
  grid top
  grid-size 5 5 5 m
  symbol-colour point station-name [20 20 80]
  colour map-fg [90 90 90]
  map-header 0 0 nw
endlayout

export map -o 108_Madre_plan.pdf -layout local -layout-debug station-names
