source ../402.th

input ../../../layouts/detailed-p.thl

layout local
  copy detailed-p
  scale 1 500
  legend off
  map-header 0 0 off
  symbol-show point label
  #symbol-show point passage-height
  symbol-hide point station-name

  symbol-color point station:fixed [70 0 0]
  symbol-hide line survey 
  symbol-hide point station:temporary
  symbol-assign line survey AUT

  color map-bg transparent
    symbol-colour point anchor [70 10 0]
  symbol-color line survey:cave [70 0 0]
  symbol-color point passage-height [70 0 70]
   symbol-color line rope [70 10 0]
  symbol-color line u:deviation [70 0 0]

endlayout

layout plan
    copy local
     code tex-map
  #\framethickness=0.5mm
  \def\xcenter{30}
  \def\ycenter{125}
  \def\yscale{3}
  \def\numcad{402005}

  # change this

  \def\customheader{
  \size[13]\bf \the\cavename{} / \numcad \ss
  \si \par \size[12]Glacier HPS-35, Estero Calvo, \par Parque Nacional Bernardo O’Higgins  \ss
     \par{ \quad}  
  \size[9]\par \bf \si Coordonnées / Coordenadas (UTM 18S, WGS 84) :{\bf \par X : 600144    \par  Y :  4384403  \par Z : 460 m}  \ss
  \par{ \quad} 
  \par \si Développement / Desarollo :\ss { \the\cavelength}
  \par \si Dénivellation / Desnivel :\ss { \the\cavedepth}
  \par \si{ Exploration et topographie / Exploracíon y topografía :}\ss{ Centre Terre -  Ultima Patagonia 2023} 
  \par \si Relevés topographiques / Mediciones topográficas :\ss{  Bernard Tourte}
  \par \si Report et dessins / Descripción y dibujos :\ss{  Tanguy Racine}}

  \def\maplayout{

  \legendbox{\the\numexpr\xcenter+10\relax}{\the\numexpr\ycenter +6*\yscale\relax}{N}{\customheader}
  %\legendbox{\the\numexpr\xcenter+80\relax}{\the\numexpr\ycenter - 10*\yscale\relax}{N}{\northarrow}
  \legendbox{\the\numexpr\xcenter-5\relax}{\the\numexpr\ycenter - 45*\yscale\relax}{N}{\scalebar}
  %\legendbox{-10}{\the\numexpr\ycenter - 25*\yscale\relax}{NW} {\hbox{\loadpicture{outputs/Perte7-HPS35-ee.pdf}}}
  \legendbox{\the\numexpr\xcenter +15\relax}{\the\numexpr\ycenter + 6*\yscale\relax}{NW} {\hbox{\loadpicture{../../../logo/CT-LOGO-150x150-BLACK-ALPHA-FR.jpg}}}
  }
  endcode
endlayout

# OUTPUTS

select m-all-e@Perte7-HPS35.402

export map -o outputs/Perte7-HPS35.pdf -projection extended -layout plan
export model -o outputs/Perte7-HPS35.3d