export model -o outputs/GouffreDuBowling.lox
#export atlas -o outputs/GouffreDuBowling.pdf -projection plan -layout local-p
export map -o outputs/GouffreDuBowling-ee.pdf -projection extended -layout local

export map -o outputs/GouffreDuBowling.pdf -projection plan -layout plan

