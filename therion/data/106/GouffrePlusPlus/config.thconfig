source GouffrePlusPlus.th

input ../../../layouts/detailed-p.thl
input ../../../layouts/detailed-e.thl

layout local
  copy detailed-p
  scale 1 500
  legend off
  map-header 0 0 off
  symbol-show point label
  symbol-hide point passage-height
  symbol-assign line wall:blocks MYEE
  
  symbol-hide point station-name 
  symbol-hide line survey
  symbol-hide point station
  color map-bg transparent

  #grid bottom
  #grid-size 10 10 10 m 
  cs UTM18S
  grid-origin 487708 4451733 0 m 
endlayout 

layout plan 
    copy local 
      grid off
    color map-bg [85 85 85]
      symbol-assign line wall:blocks MY

  code tex-map
  #\framethickness=0.5mm
  \def\xcenter{45}
  \def\ycenter{175}
  \def\xscale{20}
  \def\yscale{30}
  \def\cadnum{106023}
  \legendwidth=5cm
  # change this
  \def\customheader{
  \size[13]\bf \the\cavename{} / \cadnum \ss
  \si \par \size[12]Estero Egg, Bien Nacional Protegido \par Archipiélago Madre de Dios  \ss
  \par{ \quad} 
  \size[9]\par \bf \si Coordonnées (UTM 18S, WGS 84) :{\bf \par X : 487708  \par  Y : 4451733 \par Z : 238 m}  \ss
  \par{ \quad} 
  \par \si Développement :\ss{ \the\cavelength}
  \par \si Dénivellation :\ss{ \the\cavedepth}
  \par \si{ Exploration et topographie :}\ss{ Centre Terre -  Ultima Patagonia 2023} 
  \par \si Relevés topographiques :\ss{ }Charlotte Honiat, Jessica Morin-Buote, Cédric Roques,
  \par Arnauld Malard, Natalia Morata-Calvo,
  \par Laurence Boudoux d'Hautefeuille, Michel Philips
  \par \si Report et dessins :\ss{  Tanguy Racine}}
  
  \def\maplayout{
  \legendbox{\the\numexpr\xcenter+15\relax}{\the\numexpr\ycenter +1*\yscale\relax}{N}{\customheader}
  \legendbox{\the\numexpr\xcenter+55\relax}{\the\numexpr\ycenter - 8*\yscale\relax}{N}{\scalebar}
  \legendbox{\the\numexpr\xcenter+3*\xscale\relax}{\the\numexpr\ycenter + 1*\yscale\relax}{NW} {\hbox{\loadpicture{"/outputs/GouffrePlusPlus-ee.pdf"}}}
  \legendbox{\the\numexpr\xcenter+45\relax}{\the\numexpr\ycenter + 1*\yscale\relax}{NW} {\hbox{\loadpicture{"/../../../logo/CT-LOGO-150x150-BLACK-ALPHA-FR.jpg"}}}
   \legendbox{\the\numexpr\xcenter+65\relax}{\the\numexpr\ycenter - 2*\yscale \relax}{N}{\northarrow}
 }
  endcode
endlayout




# OUTPUTS

select m-all-p@GouffrePlusPlus
select m-all-e@GouffrePlusPlus

#export model -o outputs/GouffrePlusPlus.3d -fmt survex
#export model -o outputs/GouffrePlusPlus.lox

#export atlas -o outputs/GouffrePlusPlus.pdf -projection plan -layout local-p
export map -o outputs/GouffrePlusPlus-ee.pdf -projection extended -layout local
export map -o outputs/GouffrePlusPlus.pdf -projection plan -layout plan
