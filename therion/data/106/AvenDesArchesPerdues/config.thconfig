source AvenDesArchesPerdues.th

input ../../../layouts/detailed-p.thl
input ../../../layouts/detailed-e.thl

layout local
  copy detailed-p
  scale 1 500
  legend off
  map-header 0 0 off
  symbol-show point label
  symbol-hide point passage-height
  symbol-assign line wall:blocks MYEE
  
 # symbol-hide point station-name 
  # symbol-hide line survey
  # symbol-hide point station
  color map-bg transparent
  cs UTM18S
  grid-origin 488596 4451785 0 m 
  symbol-colour line rope [70 10 0]
  symbol-colour line u:deviation [70 10 0]
  symbol-colour point anchor [70 10 0]

endlayout 

layout plan 
    copy local 
    color map-bg [85 85 85]
      symbol-assign line wall:blocks MY

    rotate 135 

  code tex-map
  #\framethickness=0.5mm
  \def\xcenter{0}
  \def\ycenter{0}
  \def\xscale{10}
  \def\yscale{10}
  \def\cadnum{106022}
  \legendwidth=5cm
  # change this
  \def\customheader{
  \size[18]\bf \the\cavename{} / \cadnum \ss
  \si \par \size[14]Estero Egg, Bien Nacional Protegido \par Archipiélago Madre de Dios  \ss
  \par{ \quad} 
  \size[14]\par \bf \si Coordonnées (UTM 18S, WGS 84) :{\bf \par X : 489704 \par  Y : 4451405 \par Z : 358 m}  \ss
  \par{ \quad} 
  \par \si Développement :\ss{ \the\cavelength}
  \par \si Dénivellation :\ss{ \the\cavedepth}
  \par \si{ Exploration et topographie :}\ss{ Centre Terre -  Ultima Patagonia 2023} 
  \par \si Relevés topographiques :\ss{ } Alexandre Honiat, Jules Clouzeau, Charlotte Honiat, Tanguy Racine, 
  \par Olivier Guerard, Jessica Morin-Buote, Joël Tremoulet, Natalia Morata, Franck Brehier, Medhi Boukhal 
  \par \si Report et dessins :\ss{Alexandre Honiat, Tanguy Racine}}
  
  \def\maplayout{
  \legendbox{\the\numexpr\xcenter+10\relax}{\the\numexpr\ycenter +10*\yscale\relax}{N}{\customheader}
  \legendbox{\the\numexpr\xcenter+20\relax}{\the\numexpr\ycenter +1*\yscale\relax}{N}{\scalebar}
  \legendbox{\the\numexpr\xcenter-4*\xscale\relax}{\the\numexpr\ycenter + 5*\yscale\relax}{NW} {\hbox{\loadpicture{"outputs/AvenDesArchesPerdues-ee.pdf"}}}
  \legendbox{\the\numexpr\xcenter-13\relax}{\the\numexpr\ycenter +10*\yscale\relax}{NW} {\hbox{\loadpicture{"../../../logo/CT-LOGO-150x150-BLACK-ALPHA-FR.jpg"}}}
   \legendbox{\the\numexpr\xcenter+55\relax}{\the\numexpr\ycenter +55 \relax}{N}{\northarrow}
 }
  endcode
endlayout




